{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "verbatimModuleSyntax": true,
    "moduleResolution": "Bundler",
    "types": ["@types/bun"],
    "paths": {
      "@listee/auth": ["../auth/src"],
      "@listee/db": ["../db/src"],
      "@listee/types": ["../types/src"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "**/*.test.ts", "**/__tests__/**"]
}
